<h2>
	<%= title %>
</h2>

<!-- form for searching -->
<form action="/search" method="GET">
	<label for="firstName">First Name:</label>
	<input type="text" name="firstName" id="firstName" value="<%= query.firstName || '' %>" />

	<label for="lastName">Last Name:</label>
	<input type="text" name="lastName" id="lastName" value="<%= query.lastName || '' %>" />

	<label for="email">Email:</label>
	<input type="email" name="email" id="email" value="<%= query.email || '' %>" />

	<button type="submit">Search</button>
</form>

<hr />

<% if (users.length> 0) { %>
	<ul>
		<% users.forEach(user=> { %>
			<li>
				<strong>
					<%= user.firstName %>
						<%= user.lastName %>
				</strong> -
				<%= user.email %>
			</li>
			<% }); %>
	</ul>
	<% } else { %>
		<p>No users found matching your query.</p>
		<% } %>